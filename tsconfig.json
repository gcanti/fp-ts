{
  "compilerOptions": {
    "outDir": "./lib",
    "sourceMap": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "allowJs": false,
    "strictNullChecks": true,
    "target": "es5",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/**/*"
  ]
}
